<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    >

    <!--<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="40px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginBottom="40px"
        android:background="#80484848">-->

    <TextView
        android:id="@+id/ownDeviceTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Device"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:paddingLeft="5dp"
        android:paddingBottom="-40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:shadowColor="#22ffffff"
        android:shadowRadius="5"
        android:shadowDx="0"
        android:shadowDy="0"
        android:background="#15000000"
        />


    <TextView
        android:id="@+id/ownDevice"
        android:layout_below="@+id/ownDeviceTV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:drawableLeft="@drawable/device_icon"
        android:drawablePadding="10dp"
        android:text="afg"
        android:layout_marginLeft="25px"
        android:layout_marginRight="25px"
        android:paddingLeft="5dp"
        android:paddingTop="15dp"
        android:paddingRight="5dp"
        android:paddingBottom="15dp" />


    <TextView
        android:id="@+id/title_paired_devices"
        android:layout_below="@+id/ownDevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paired Devices"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:paddingLeft="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:shadowColor="#22ffffff"
        android:shadowRadius="5"
        android:shadowDx="0"
        android:shadowDy="0"
        android:background="#15000000"
        />

    <TextView
        android:id="@+id/noPairedDevices"
        android:layout_below="@+id/title_paired_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25px"
        android:layout_marginRight="25px"
        android:paddingLeft="5dp"
        android:paddingTop="15dp"
        android:paddingRight="5dp"
        android:paddingBottom="15dp"
        android:textSize="18sp"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/paired_devices"
        android:layout_below="@+id/noPairedDevices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#15000000"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:dividerHeight="0.5sp" />

    <TextView
        android:id="@+id/title_new_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Available Devices"
        android:visibility="gone"
        android:layout_below="@+id/paired_devices"
        android:textColor="#000"
        android:paddingLeft="5dp"
        android:layout_marginTop="10dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:shadowColor="#22ffffff"
        android:shadowRadius="5"
        android:shadowDx="0"
        android:shadowDy="0"
        android:background="#15000000"
        />

    <TextView
        android:id="@+id/noNewDevices"
        android:layout_below="@+id/title_new_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25px"
        android:layout_marginRight="25px"
        android:paddingLeft="5dp"
        android:paddingTop="15dp"
        android:paddingRight="5dp"
        android:paddingBottom="15dp"
        android:textSize="18sp"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/new_devices"
        android:layout_below="@+id/noNewDevices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#15000000"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:dividerHeight="0.5sp"
        />

    <RelativeLayout
        android:id="@+id/InnerRelativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true" >
        <!--<Button
            android:id="@+id/button_scan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Scan Devices"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:background="#fff"
            android:layout_gravity="bottom" />-->
    </RelativeLayout>
    <!--</RelativeLayout>-->
</RelativeLayout>