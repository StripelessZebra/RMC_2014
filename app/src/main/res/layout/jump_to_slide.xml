<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/jumpToSlideTv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:textSize="16dp"
        android:text="Go To Slide #:"/>

    <!--<EditText
        android:id="@+id/jumpToSlideInput"
        android:layout_below="@+id/jumpToSlideTv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:maxLength="2"
        android:inputType="number"/>-->

    <Spinner
        android:id="@+id/jumpToSlideInput"
        android:layout_below="@+id/jumpToSlideTv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/jumpToSlideInput"
        android:gravity="center">

        <Button
            android:id="@+id/goToSlide"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/settings_button_style"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:textColor="#fff"
            android:text="Go"
            />

        <Button
            android:id="@+id/cancelJump"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/settings_button_style"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:textColor="#fff"
            android:text="Cancel"
            />
    </LinearLayout>


</RelativeLayout>